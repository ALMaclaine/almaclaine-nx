{
  "name": "option",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/option/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nrwl/js:swc",
      "dependsOn": [{ "projects": "dependencies", "target": "build" }, "build:esm", "build:cjs"],
      "outputs": ["{options.outputPath}"],
      "options": {
        "clean": false,
        "outputPath": "dist/libs/option",
        "main": "libs/option/src/index.ts",
        "tsConfig": "libs/option/tsconfig.lib.json",
        "assets": ["libs/option/*.md"],
        "buildableProjectDepsInPackageJsonType": "dependencies"
      }
    },
    "build:esm": {
      "executor": "@nrwl/js:swc",
      "dependsOn": [{ "projects": "dependencies", "target": "build:esm" }],
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/libs/option/esm",
        "main": "libs/option/src/index.ts",
        "tsConfig": "libs/option/tsconfig.lib.json",
        "assets": ["libs/option/*.md"],
        "swcrc": "libs/option/.lib.esm.swcrc",
        "buildableProjectDepsInPackageJsonType": "dependencies"
      }
    },
    "build:cjs": {
      "executor": "@nrwl/js:swc",
      "dependsOn": [{ "projects": "dependencies", "target": "build:cjs" }],
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/libs/option/cjs",
        "main": "libs/option/src/index.ts",
        "tsConfig": "libs/option/tsconfig.lib.json",
        "assets": ["libs/option/*.md"],
        "swcrc": "libs/option/.lib.cjs.swcrc",
        "buildableProjectDepsInPackageJsonType": "dependencies"
      }
    },
    "publish": {
      "executor": "@almaclaine/publish:publish",
      "dependsOn": ["build"]
    },
    "publish:upload": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node tools/scripts/publish.mjs option {args.ver} {args.tag} {args.mfa}"
      },
      "dependsOn": ["build"]
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["libs/option/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nrwl/vite:test",
      "outputs": ["coverage/libs/option"],
      "options": {
        "passWithNoTests": true,
        "reportsDirectory": "../../coverage/libs/option"
      }
    }
  },
  "tags": []
}
