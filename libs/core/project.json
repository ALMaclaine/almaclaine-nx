{
  "name": "core",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/core/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:swc",
      "dependsOn": [
        {
          "target": "build",
          "dependencies": true
        },
        "build:esm",
        "build:cjs"
      ],
      "outputs": ["{options.outputPath}"],
      "options": {
        "clean": false,
        "outputPath": "dist/libs/core",
        "main": "libs/core/src/index.ts",
        "tsConfig": "libs/core/tsconfig.lib.json",
        "assets": ["libs/core/*.md"]
      }
    },
    "build:esm": {
      "executor": "@nx/js:swc",
      "outputs": ["{options.outputPath}"],
      "dependsOn": [
        {
          "target": "build:esm",
          "dependencies": true
        }
      ],
      "options": {
        "outputPath": "dist/libs/core/esm",
        "main": "libs/core/src/index.ts",
        "tsConfig": "libs/core/tsconfig.lib.json",
        "assets": ["libs/core/*.md"],
        "swcrc": "libs/core/.lib.esm.swcrc"
      }
    },
    "build:cjs": {
      "executor": "@nx/js:swc",
      "outputs": ["{options.outputPath}"],
      "dependsOn": [
        {
          "target": "build:cjs",
          "dependencies": true
        }
      ],
      "options": {
        "outputPath": "dist/libs/core/cjs",
        "main": "libs/core/src/index.ts",
        "tsConfig": "libs/core/tsconfig.lib.json",
        "assets": ["libs/core/*.md"],
        "swcrc": "libs/core/.lib.cjs.swcrc"
      }
    },
    "publish": {
      "executor": "@almaclaine/publish:publish",
      "dependsOn": ["build"]
    },
    "publish:upload": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node tools/scripts/publish.cjs core {args.ver} {args.tag} {args.mfa}"
      },
      "dependsOn": ["build"]
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"]
    },
    "test": {
      "executor": "@nx/vite:test",
      "outputs": ["{workspaceRoot}/coverage/libs/core"],
      "options": {
        "passWithNoTests": true,
        "reportsDirectory": "../../coverage/libs/core"
      }
    }
  },
  "tags": []
}
