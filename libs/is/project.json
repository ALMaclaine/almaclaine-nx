{
  "name": "is",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/is/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nrwl/js:swc",
      "dependsOn": [{ "projects": "dependencies", "target": "build" }, "build:esm", "build:cjs"],
      "outputs": ["{options.outputPath}"],
      "options": {
        "clean": false,
        "outputPath": "dist/libs/is",
        "main": "libs/is/src/index.ts",
        "tsConfig": "libs/is/tsconfig.lib.json",
        "assets": ["libs/is/*.md"],
        "buildableProjectDepsInPackageJsonType": "dependencies"
      }
    },
    "build:esm": {
      "executor": "@nrwl/js:swc",
      "dependsOn": [{ "projects": "dependencies", "target": "build:esm" }],
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/libs/is/esm",
        "main": "libs/is/src/index.ts",
        "tsConfig": "libs/is/tsconfig.lib.json",
        "assets": ["libs/is/*.md"],
        "swcrc": "libs/is/.lib.esm.swcrc",
        "buildableProjectDepsInPackageJsonType": "dependencies"
      }
    },
    "build:cjs": {
      "executor": "@nrwl/js:swc",
      "dependsOn": [{ "projects": "dependencies", "target": "build:cjs" }],
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/libs/is/cjs",
        "main": "libs/is/src/index.ts",
        "tsConfig": "libs/is/tsconfig.lib.json",
        "assets": ["libs/is/*.md"],
        "swcrc": "libs/is/.lib.cjs.swcrc",
        "buildableProjectDepsInPackageJsonType": "dependencies"
      }
    },
    "publish": {
      "executor": "@almaclaine/publish:publish",
      "dependsOn": ["build"]
    },
    "publish:upload": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node tools/scripts/publish.mjs is {args.ver} {args.tag} {args.mfa}"
      },
      "dependsOn": ["build"]
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["libs/is/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nrwl/vite:test",
      "outputs": ["coverage/libs/is"],
      "options": {
        "passWithNoTests": true,
        "reportsDirectory": "../../coverage/libs/is"
      }
    }
  },
  "tags": []
}
